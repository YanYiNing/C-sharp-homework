<Page
    x:Class="The_Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource AppBarBackground}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="7"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="7"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="7"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="7"/>
		</Grid.RowDefinitions>

		<Button x:ConnectionId='1' 
			Content="1"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="5" Grid.Column="1"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='2' 
			Content="2"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="5" Grid.Column="2"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei"                                  
			/>

		<Button x:ConnectionId='3' 
			Content="3"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="5" Grid.Column="3"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='4' 
			Content="4"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="6" Grid.Column="1"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='5' 
			Content="5"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="6" Grid.Column="2"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='6' 
			Content="6"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="6" Grid.Column="3"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='7' 
			Content="7"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="7" Grid.Column="1"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='8' 
			Content="8"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="7" Grid.Column="2"
			Margin="3.333,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='9' 
			Content="9"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="7" Grid.Column="3"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='10' 
			Content="("                                      
			HorizontalAlignment="Stretch" 
			Grid.Row="4" Grid.Column="1"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='11' 
			Content=")"                                       
			HorizontalAlignment="Stretch" 
			Grid.Row="4" Grid.Column="2"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>
		
		<Button x:ConnectionId='12' 
			Content="x"                              
			HorizontalAlignment="Stretch" 
			Grid.Row="4" Grid.Column="4"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='13' 
			Content="/"                            
			HorizontalAlignment="Stretch" 
			Grid.Row="5" Grid.Column="4"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='14' 
			Content="←"                            
			HorizontalAlignment="Stretch" 
			Grid.Row="4" Grid.Column="3"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXingkai" FontWeight="Bold" 
			/>

		<Button x:ConnectionId='15' 
			Content="+"                         
			HorizontalAlignment="Stretch" 
			Grid.Row="6" Grid.Column="4"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='16' 
			Content="-"                              
			HorizontalAlignment="Stretch" 
			Grid.Row="7" Grid.Column="4"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='17' 
			Content="="                            
			HorizontalAlignment="Stretch" 
			Grid.Row="8" Grid.Column="4"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='18' 
			Content="C"                               
			HorizontalAlignment="Stretch" 
			Grid.Row="8" Grid.Column="1"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='19' 
			Content="0"                       
			HorizontalAlignment="Stretch" 
			Grid.Row="8" Grid.Column="2"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>

		<Button x:ConnectionId='20' 
			Content="."                           
			HorizontalAlignment="Stretch" 
			Grid.Row="8" Grid.Column="3"
			Margin="3.3,3,3,3"
			Height="Auto" Width="Auto" 
			Grid.ColumnSpan="1"
			Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" 
			VerticalAlignment="Stretch" FontSize="60" FontFamily="STXihei" 
			/>


		

		<TextBlock Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="1" 
				 TextWrapping="Wrap" Text="TextBox" 
				 FontSize="20" FontFamily="STXihei"
				 />

		<TextBox x:ConnectionId='21' Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="2" 
				 x:Name="numberText"
				 TextWrapping="Wrap"  
				 FontSize="60" FontFamily="STXihei"
				 Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" TextAlignment="Right"/>

		<TextBox x:ConnectionId='22' Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="1" 
				 x:Name="expressionText"
				 TextWrapping="Wrap"  
				 FontSize="20" FontFamily="STXihei"
				 Background="{ThemeResource AppBarToggleButtonCheckedForegroundThemeBrush}" TextAlignment="Right"/>

	</Grid>
</Page>

